<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--    Button style-->
    <style name="Button" parent="Widget.Material3.Button">
        <item name="android:fontFamily">@font/mulish_900</item>
        <item name="android:layout_height">@dimen/btn_height</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="cornerRadius">0dp</item>
    </style>

    <style name="Button.Primary">
        <item name="backgroundTint">@color/tint_primary_button</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Button.Secondary">
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:layout_height">@dimen/btn_height</item>
        <item name="strokeColor">@color/gray</item>
        <item name="strokeWidth">1dp</item>
    </style>


    <!--    Toolbar style-->
    <style name="Toolbar" parent="Widget.Material3.Toolbar">
        <item name="android:paddingHorizontal">@dimen/padding_large</item>
    </style>

    <style name="Toolbar.Title">
        <item name="android:textSize">@dimen/text_xlarge</item>
        <item name="titleTextAppearance">@style/ToolbarTitleText</item>
        <item name="titleCentered">true</item>
    </style>

    <style name="ToolbarTitleText">
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/mulish_900</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:letterSpacing">-0.05</item>
    </style>


    <!--    Input style-->
    <style name="Input" parent="ThemeOverlay.Material3.TextInputEditText.OutlinedBox" />

    <style name="Input.Primary">
        <item name="android:paddingHorizontal">@dimen/padding_medium</item>
        <!--    text color for big hints-->
        <item name="android:textColorHint">@color/tint_example_hint</item>
        <!--    fontFamily for both small hint and big hint-->
        <item name="android:fontFamily">@font/mulish_400</item>
        <!--    textSize for both text and big hint-->
        <item name="android:textSize">@dimen/text_large</item>
    </style>


    <!--    TextInputLayout style-->
    <style name="TextInputLayout">
        <item name="expandedHintEnabled">false</item>
        <!--    text color for small hint-->
        <item name="hintTextColor">@color/tint_small_hint</item>
        <!--    text size for small hints-->
        <item name="hintTextAppearance">@style/HintTextAppearance</item>
        <item name="boxStrokeColor">@color/tint_stroke_input</item>
        <item name="boxStrokeWidthFocused">@dimen/stroke_tiny</item>
    </style>

    <!--    Text size for small hints-->
    <style name="HintTextAppearance" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">@dimen/text_small</item>
    </style>


    <!--    TextView style-->
    <style name="Text" parent="Widget.AppCompat.TextView">
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/mulish_400</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textColor">@color/gray</item>
    </style>


    <!--    TextButton style-->
    <style name="ButtonText" parent="Widget.Material3.Button.TextButton">
        <item name="android:fontFamily">@font/mulish_300</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textColor">@color/black_80</item>
    </style>

</resources>
